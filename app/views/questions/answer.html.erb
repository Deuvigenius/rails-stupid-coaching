<div class="container rms-3">
  <h1 class="ms-3 mt-3">Stupid Coaching</h1>
  <div class="card mt-3 border border-secondary border-4 border-top-0 border-end-0 border-bottom-0">
    <div class="card-body ms-3">
      <blockquote class="blockquote mb-0">
        <p><%=@question %></p>
        <footer class="blockquote-footer">You</footer>
      </blockquote>
    </div>
  </div>

  <div class="card mt-3 border border-secondary border-4 border-top-0 border-end-0 border-bottom-0 bg-warning bg-opacity-10">
    <div class="card-body ms-3">
      <blockquote class="blockquote mb-0">
        <p><%=@answer %></p>
        <footer class="blockquote-footer">Your coach</footer>
      </blockquote>
    </div>
  </div>
  <a href="" class="ms-3"><%= link_to "Ask a new question", ask_path %></a>
</div>